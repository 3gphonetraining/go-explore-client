<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="20dp"
    android:background="#FFFFFF"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" >
    <TextView
        android:layout_width="260dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="您的账号："/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="4dp"
        android:background="#F2F2F2" >
    </View>
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/username_"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp"
            android:background="#FFFFFF"
            android:drawablePadding="6sp"
            android:hint="123456789"
            android:gravity="center_horizontal"
            android:textColor="#3D3D3D"
            android:textColorHint="#A3B1CA"
            android:textSize="25sp" >
        </TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="4dp"
            android:background="#F2F2F2" >
        </View>
        <Button
            android:id="@+id/btnchangepsw"
            android:layout_width="260dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#6699FF"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" >
        </Button>

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="4dp">
        </View>

        <TextView
            android:id="@+id/pwdHint"
            android:layout_width="260dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="请输入新密码："/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="4dp"
            android:background="#F2F2F2" >
        </View>
        <EditText
            android:id="@+id/ModPwd"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="#FFFFFF"
            android:drawablePadding="6sp"
            android:inputType="textPassword"
            android:textColorHint="#A3B1CA"
            android:textSize="15sp" >
        </EditText>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="2dp"
            android:background="#F2F2F2" >
        </View>

        <TextView
            android:id="@+id/pwdReHint"
            android:layout_width="260dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="请再次输入新密码："/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="4dp"
            android:background="#F2F2F2" >
        </View>
        <EditText
            android:id="@+id/ModPwdAgain"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="#FFFFFF"
            android:drawablePadding="6sp"
            android:inputType="textAutoComplete"
            android:textColorHint="#A3B1CA"
            android:textSize="15sp" >
        </EditText>
    </LinearLayout>
    <Button
        android:id="@+id/btnlogout"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#6699FF"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" >
    </Button>
</LinearLayout>
