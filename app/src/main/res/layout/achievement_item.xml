<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <ImageView
        android:id="@+id/achievement_item_head"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/champion" />
    <LinearLayout
        android:id="@+id/achievement_item_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/achievement_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />
        <LinearLayout
            android:id="@+id/achievement_item_sub_content"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:text="@string/achievement_item_completion_prefix"/>
            <TextView
                android:id="@+id/achievement_item_condition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/achievement_item_completion"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/achievement_item_state"
        android:layout_width="105dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:text="未获得"/>
</LinearLayout>